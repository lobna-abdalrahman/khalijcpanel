@using System.Web.Mvc.Html
@model Cpanel.Models.UsersMangementViewModel

@{
    ViewBag.Title = "Users Log Report";
}
<section class="content">
    <div class="row">
        <!-- Left col -->
        <section class="col-md-8 connectedSortable col-md-offset-2">
            <!-- Own Transfer -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title my-box-header"></h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">



                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <h4>Users Log Report</h4>
                                    <hr />
                                    @Html.ValidationSummary(true)

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Username, new { @class = "col-md-2" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control ", @placeholder = "username", required = true })
                                            @Html.ValidationMessageFor(model => model.Username)
                                        </div>
                                    </div>
                                    <br />
                                    <div class="form-group">
                                        <label class="col-md-3"> Login Type</label>

                                        <div class="col-md-2">
                                            <label>
                                                All
                                                @Html.RadioButtonFor(model => model.SuccessfulLogin, "1", new { @class = "flat-red" })
                                            </label>
                                            @*@Html.EditorFor(model => model.SuccessfulLogin)*@
                                            @*@Html.ValidationMessageFor(model => model.SuccessfulLogin)*@
                                        </div>

                                        <div class="col-md-4">
                                            <label>
                                                Successful Login
                                                @Html.RadioButtonFor(model => model.SuccessfulLogin, "2", new { @class = "flat-red" })
                                            </label>
                                            @*@Html.EditorFor(model => model.SuccessfulLogin)*@
                                            @*@Html.ValidationMessageFor(model => model.SuccessfulLogin)*@
                                        </div>

                                        <div class="col-md-3">
                                            <label>
                                                Failed Login
                                                @Html.RadioButtonFor(model => model.SuccessfulLogin, "3", new { @class = "flat-red" })
                                            </label>
                                            @*@Html.EditorFor(model => model.FailedLogin)*@
                                            @*@Html.ValidationMessageFor(model => model.FailedLogin)*@
                                        </div>
                                    </div>

                                    @*<div class="form-group">
                                            @Html.LabelFor(model => model.FailedLogin, new { @class = "col-md-2" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.FailedLogin)
                                                @Html.ValidationMessageFor(model => model.FailedLogin)
                                            </div>
                                        </div>*@


                                    <div class="form-group">
                                        <div class="col-xs-7 col-xs-offset-4">
                                            <input type="submit" value="Show Report" class="btn btn-danger btn-block btn-flat" />
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
