                </div>
                <div class="panel-body">


                    <div class="table-responsive">
                        <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                            @*<table id="dtBasicExample" class="table table-bordered table-hover table-bordered table-striped" cellspacing="0" width="100%">*@
                            <thead style="color: cadetblue">
                                <tr>
                                    <th class="th-sm">

                                        @Html.DisplayNameFor(model => model.CustomerName)



                                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                                    </th>
                                    <th class="th-sm">
                                        @Html.DisplayNameFor(model => model.CustStatus)


                                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                                    </th>

                                    <th class="th-sm">
                                        @Html.DisplayNameFor(model => model.RegDate)


                                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                                    </th>

                                    <th class="th-sm">
                                        @Html.DisplayNameFor(model => model.AccountNumber)
                                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                                    </th>

                                    <th class="th-sm">
                                        @Html.DisplayNameFor(model => model.Branch)
                                        <i class="fa fa-sort float-right" aria-hidden="true"></i>
                                    </th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CustomerName)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.CustStatus)
                                        </td>


                                        <td>
                                            @Html.DisplayFor(modelItem => item.RegDate)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.AccountNumber)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Branch)
                                        </td>
                                    </tr>
                                }


                            </tbody>
                            <tfoot style="color: cadetblue">
                                <tr>
                                    <th>
                                        Total Customers
                                    </th>
                                    <th>
                                        @if (ViewBag.Total != null)
                                        {  @ViewBag.Total }

                                    </th>
                                    <th>

                                    </th>

                                </tr>
                            </tfoot>
                        </table>
                        <div class="box-footer">
                            <p>
                                @using (Html.BeginForm("SavePDF", "CustomerBranchReport"))
                                {
                                    <br />


                                    <div class="form-group">
                                        <div class="col-xs-10">
                                            <input type="submit" value="Print" class="btn btn-info btn-block btn-flat" />
                                        </div>
                                    </div>
                                }
                            </p>

                        </div>
                    </div>


