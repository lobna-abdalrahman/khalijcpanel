@model IEnumerable<Cpanel.Models.CustomerBranshReportModel>

@{
    ViewBag.Title = "View Report";
}
<section class="content">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="alert alert-info">

                        <div class="text-center">
                            <h4>
                                Customer Report For @if (ViewBag.Branchname != null)
                                {  @ViewBag.Branchname }
                            </h4>
                            </div>
                        <div >
                            <div class="col-md-6 ">
                                Date @if (ViewBag.Date != null)
                                {  @ViewBag.Date }
                            </div>  
                            <div class=" col-md-6 text-right">
                                TIme @if (ViewBag.Time != null)
                                {  @ViewBag.Time }
                            </div>              
                        </div>
                        <div class="text-center">
                            Total of Customers Registered 

                            @if (ViewBag.Total != null)
                            {  @ViewBag.Total }

                        </div>

                    </div>


