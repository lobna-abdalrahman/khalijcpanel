@model Cpanel.Models.changepassword
 
<section class="content">
    <div class="row">
        <!-- Left col -->
        <section class="col-md-8 connectedSortable col-md-offset-2">
            <!-- Own Transfer -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title my-box-header"></h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-1">

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <h4>Change Your Password</h4>
                                    <hr />
                                    @Html.ValidationSummary(true)



                                    <div class="form-group has-feedback">
                                        @Html.TextBoxFor(model => model.OldPassword, new
                                   {
                                       @class = "form-control",
                                       minlength = "8",
                                       maxlength = "20",
                                       pattern = "\\[A-Za-z0-9]{8,20}",
                                       @placeholder = "Enter Your Old Password",
                                       @type = "password"
                                   })
                                        @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                                    </div>
                                    <div class="form-group has-feedback">
                                        @Html.TextBoxFor(model => model.newPassword, new
                                   {
                                       @class = "form-control",
                                       minlength = "8",
                                       maxlength = "20",
                                       pattern = "\\[A-Za-z0-9]{8,20}",
                                       @placeholder = "Enter Your new Password",
                                       @type = "password"
                                   })
                                        @Html.ValidationMessageFor(model => model.newPassword, "", new { @class = "text-danger" })
                                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                                    </div>
                                    <div class="form-group has-feedback">
                                        @Html.TextBoxFor(model => model.confrimPassword, new
                                   {
                                       @class = "form-control",
                                       minlength = "8",
                                       maxlength = "20",
                                       pattern = "\\[A-Za-z0-9]{8,20}",
                                       @placeholder = "Enter Confirm new Password",
                                       @type = "password"
                                   })
                                        @Html.ValidationMessageFor(model => model.confrimPassword, "", new { @class = "text-danger" })
                                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs6">

                                        </div>
                                        <!-- /.col -->

                                        <div class="col-xs-6">
                                            <input type="submit" value="Change Password" class="btn btn-primary btn-block btn-flat" onclick="return
                               displayprogressmessage(this, 'Changing .....' );" />

                                        </div>
                                        <!-- /.col -->
                                    </div>

                                </div>
                            }
                        </div>

                    </div>
                </div>
       </div>
                 </section>
    </div>
</section>

