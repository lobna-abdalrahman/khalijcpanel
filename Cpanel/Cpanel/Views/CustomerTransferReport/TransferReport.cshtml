@model Cpanel.Models.CustomerTransferReportViewModel

@{
    ViewBag.Title = "Transfer Report";
}


<section class="content">
<div class="row">
    <!-- Left col -->
    <section class="col-md-8 connectedSortable col-md-offset-2">
        <!-- Own Transfer -->
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title my-box-header"></h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>Customer Transfer Report</h4>
                                <hr />
                                @Html.ValidationSummary(true)
                                
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Branch, new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.DropDownListFor(model => model.BranchCode, Model.Branches,   new { @class = "form-control ", @placeholder = "Branch...",required = "true" })
                                        @Html.ValidationMessageFor(model => model.BranchCode)
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    @Html.LabelFor(model => model.AccountType, new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.DropDownListFor(model => model.AccountTypecode, Model.AccTypes, "-- Select Account Type --", new { @class = "form-control ", @placeholder = "Branch...", required = "true" })
                                        @Html.ValidationMessageFor(model => model.AccountTypecode)
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Currency, new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.DropDownListFor(model => model.CurrencyCode, Model.Currencies, "-- Select Currency --", new { @class = "form-control ", @placeholder = "Branch...", required = "true" })
                                        @Html.ValidationMessageFor(model => model.CurrencyCode)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.AccountNumber, new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(model => model.AccountNumber, new { @class = "form-control ", @placeholder = "Account #...", required = "true" })
                                        @Html.ValidationMessageFor(model => model.AccountNumber)
                                    </div>
                                </div>
                             @*   <div class="form-group">
                                    @Html.LabelFor(model => model.AccountNumber, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.AccountNumber)
                                        @Html.ValidationMessageFor(model => model.AccountNumber)
                                    </div>
                                </div>*@





                                <div class="form-group">
                                    <div class="col-xs-7 col-xs-offset-4">
                                        <input type="submit" value="Submit" class="btn btn-danger btn-block btn-flat" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
      </section>
    </div>
</section>  








@section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
